<%- include('partials/_header'); -%>
<!-- Modal Edit -->
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Editar Categoria</h5>
        </div>
        <div class="modal-body">
            <form action="/categories/update/<%= data.category_id %>" method="post">
                <div class="form-group">
                    <div class="row g-3">
                        <div class="col-12">
                            <label for="inputCategory" class="form-label">Categoria: </label>
                            <input type="text" name="category" class="form-control" placeholder="Categoria"
                                value="<%= data.category %>">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="/categories" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/_footer'); -%>